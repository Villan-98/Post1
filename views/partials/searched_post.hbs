<div class="row">
    <div class="col">
        {{# each posts as |post|}}
            <div class="row bg-light m-2 px-3">

                <div class="col-12" >
                    <a href="/{{../nav.username}}/chat/{{post.id}}">
                        <div class="col-12">
                            Uploaded by: {{post.Puser.username}}
                        </div>

                        <div class="col-12">
                            {{post.text}}
                        </div>
                        {{#if post.pic}}

                            <img src="/upload/{{post.address}}" style='height: 100%; width: 100%; object-fit: contain'>
                        {{/if}}
                        <hr>
                    </a>
                </div>
                <div class="col-12 mt-1" id="{{post.id}}">

                        <div class="row">
                            {{#if post.likes.0.value}}
                                <div class="col-3" id="N{{post.id}}">
                                   <i class="fa fa-thumbs-up " onclick="like_post({{post.id}},-1,{{post.vote}},0),abv()" style="font-size:30px" ></i>

                                   <i class="far fa-thumbs-down mt-1"onclick="like_post({{post.id}},-2,{{post.vote}},1),abv()" style="font-size:30px" ></i>
                                </div>
                            {{else}}

                                {{#if post.dislikes.0.value}}
                                    <div class="col-3"  id="N{{post.id}}">
                                        <i class="far fa-thumbs-up" onclick="like_post({{post.id}},2,{{post.vote}},1),abv()" style="font-size: 30px" aria-hidden="true"></i>
                                        <i class="fa fa-thumbs-down"onclick="like_post({{post.id}},1,{{post.vote}},0),abv()" style="font-size:30px"aria-hidden="true"></i>
                                    </div>
                                {{else}}
                                    <div class="col-3" id="N{{post.id}}">

                                        <i class="far fa-thumbs-up" onclick="like_post({{post.id}},1,{{post.vote}},1),abv()" style="font-size: 30px" aria-hidden="true"></i>
                                        <i class="far fa-thumbs-down"onclick="like_post({{post.id}},-1,{{post.vote}},1),abv()" style="font-size:30px"aria-hidden="true"></i>
                                    </div>
                                {{/if}}
                            {{/if}}
                            <div class="offset-md-1 col-3">
                                {{# if ../delButton}}
                                    <button onclick="deletePost({{post.id}})" class=" btn btn-danger">Delete Post</button>

                                {{/if}}
                            </div>
                        </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
